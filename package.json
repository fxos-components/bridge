{
  "name": "threads",
  "version": "0.1.2",
  "homepage": "https://github.com/gaia-components/threads",
  "license": "MIT",
  "main": "threads.js",

  "scripts": {
    "test": "./node_modules/karma/bin/karma start test/karma.conf.js --single-run",
    "test-dev": "./node_modules/karma/bin/karma start test/karma.conf.js",
    "bundle": "browserify index.js -s threads -o threads.js && npm run bundle-client && npm run bundle-service",
    "bundle-client": "browserify lib/client -s client -o client.js",
    "bundle-service": "browserify lib/service -s service -o service.js",
    "compress": "ccjs threads.js --language_in=ECMASCRIPT6 --language_out=ES5 > threads.min.js && npm run compress-client && npm run compress-service",
    "compress-client": "ccjs client.js --language_in=ECMASCRIPT6 --language_out=ES5 > client.min.js",
    "compress-service": "ccjs service.js --language_in=ECMASCRIPT6 --language_out=ES5 > service.min.js",
    "build": "npm run bundle",
    "watch": "watchify index.js -s threads -o threads.js",
    "watch-client": "watchify lib/client.js -s client -o client.js",
    "watch-service": "watchify lib/service.js -s service -o service.js"
  },

  "repository": {
    "type": "git",
    "url": "git://github.com/gaia-components/threads.git"
  },

  "bugs": {
    "url": "https://github.com/gaia-components/threads/issues"
  },

  "dependencies": {
    "browserify": "^10.1.0",
    "karma": "^0.12.31",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-sinon-chai": "^0.3.0"
  },

  "devDependencies": {
    "browserify": "^9.0.8",
    "closurecompiler": "^1.5.2",
    "karma": "^0.12.37",
    "karma-firefox-launcher": "0.1.3",
    "karma-mocha": "0.1.3",
    "karma-sinon-chai": "0.1.6",
    "mozilla-download": "^1.0.4",
    "watchify": "^3.2.3"
  }
}
